<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Insights</title>
    <style>

    
    body{

      margin: 0;
      padding: 0;
      background-color: #121212;
    }       


    .span_box{
      display: flex;
      justify-content: center;
      align-items: center;
      height: 40%;
      width: 40%;
      margin: 20px;
      position: relative;
      top: 40px;
     

    }

    
.span2{
  position: absolute;
  top:30px;
  right:60px;
  padding: 20px;
  color: white;
  max-height: 550px; 

  

}

table {
  color: white;
  width: 100%;

}

td {
  padding: 20px 26px;
  text-align: center;
  
}

.table-container {
  max-height: 480px;
  overflow-y: auto;
  padding: 10px;
  scrollbar-width: thin; 
  scrollbar-color: black transparent;
}

thead th {
  position: sticky;
  top: 0;
  background-color: #121212;
  font-size: larger;
    
}
.heading{
  color:white;
  text-align: center;
}


@media screen and (max-width: 600px) {
  /* Make body padding so content doesnâ€™t touch edges */
  body {
    padding: 10px;
  }

  /* Span_box becomes block, full width, auto height */
  .span_box {
    display: block !important;
    width: 100% !important;
    height: auto !important;
    margin: 0 auto 20px auto !important;
    position: static !important;  /* Remove absolute or relative */
    top: auto !important;
  }

  /* Make canvas responsive inside span_box */
  canvas#myChart {
    width: 100% !important;
    height: auto !important;
    max-height: 300px; /* Optional max height */
  }

  /* Span2 below the graph, static positioning, full width */
  .span2 {
    position: static !important;
    width: 100% !important;
    max-height: none !important;
    margin: 0 auto;
    padding: 10px !important;
    overflow: visible !important;
  }

  /* Table container smaller height for scrolling on mobile */
  .table-container {
    max-height: 300px !important;
    overflow-y: auto !important;
  }

  /* Table styles */
  table {
    width: 100%;
    font-size: 14px;
    border-collapse: collapse;
  }

  th, td {
    padding: 10px 8px;
    text-align: center;
  }

  /* Heading styles */
  h1.heading {
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 10px;
  }
}




    </style>
</head>
<body>

<br><br>
<span class="span_box">

    
<canvas id="myChart" width="400px" height="400px"></canvas>

    
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const labels = <%- JSON.stringify(data.map(e => e.description)) %>;
  const amounts = <%- JSON.stringify(data.map(e => Number(e.amount))) %>;
   
  function getRandomColor(opacity = 0.6) {
    const r = Math.floor(Math.random() * 256);
    const g = Math.floor(Math.random() * 256);
    const b = Math.floor(Math.random() * 256);
    return `rgba(${r}, ${g}, ${b}, ${opacity})`;
  }

  // Generate random background and border colors for each bar
  const backgroundColors = amounts.map(() => getRandomColor(0.6));
  const borderColors = backgroundColors.map(bg => bg.replace(/[\d\.]+\)$/g, '1)'));


  const ctx = document.getElementById('myChart');


  

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: labels,
      datasets: [{
        label: 'Expenses',
        data: amounts,
        backgroundColor: backgroundColors,
        borderColor: borderColors,
        borderWidth: 2
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>
 </span>


<span class="span2">
  <h1 class="heading" >Grocery Details</h1>

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% for(let item of data) { %>
        <tr>
          <td><%= item.description %></td>
          <td><%= item.amount %></td>
          <td><%= item.date %></td>
          <td><%= item.time %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</span>

</body>
</html>